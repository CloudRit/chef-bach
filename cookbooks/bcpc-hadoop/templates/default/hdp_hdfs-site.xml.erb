<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

  <property>
    <name>dfs.name.dir</name>
    <value>/disk1/dfs/namedir,/disk2/dfs/namedir,/disk3/dfs/namedir,/disk4/dfs/namedir</value>
  </property>

  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/disk1/dfs/nn,/disk2/dfs/nn,/disk3/dfs/nn,/disk4/dfs/nn</value>
  </property>

  <property>
    <name>dfs.nameservices</name>
    <value>bcpc</value>
  </property>

  <property>
    <name>dfs.ha.namenodes.bcpc</name>
    <value>namenode0,namenode1</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/disk1/dfs/dn,/disk2/dfs/dn,/disk3/dfs/dn,/disk4/dfs/dn</value>
  </property>

  <property>
    <name>dfs.datanode.failed.volumes.tolerated</name>
    <value>3</value>
  </property>

  <% @hh_hosts.each do |h| %>	
    <property>
      <name>dfs.namenode.rpc-address.bcpc.namenode<%=h[:bcpc][:namenode][:id] %></name>
      <value><%=float_host(h[:hostname]) %>:8020</value>
    </property>
  <% end %>

  <% @hh_hosts.each do |h| %>	
    <property>
      <name>dfs.namenode.http-address.bcpc.namenode<%=h[:bcpc][:namenode][:id] %></name>
      <value><%=float_host(h[:hostname]) %>:50070</value>
    </property>
  <% end %>

  <% @hh_hosts.each do |h| %>	
    <property>
      <name>dfs.namenode.https-address.bcpc.namenode<%=h[:bcpc][:namenode][:id] %></name>
      <value><%=float_host(h[:hostname]) %>:50080</value>
    </property>
  <% end %>

  <property>
    <name>dfs.client.failover.proxy.provider.bcpc</name>
    <value>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</value>
  </property>

  <property>
    <name>dfs.ha.automatic-failover.enabled</name>
    <value>true</value>
  </property>

  <property>
    <name>ha.zookeeper.quorum</name>
    <value><%= @quorum_hosts.map{ |s| float_host(s[:hostname]) + ":2181" }.join(",") %></value> 
  </property>

  <property>
    <name>dfs.namenode.shared.edits.dir</name>
    <value>qjournal://<%= @quorum_hosts.map{ |s| float_host(s[:hostname]) + ":8485" }.join(";") %>/bcpc</value>
  </property>

  <property>
    <name>dfs.journalnode.edits.dir</name>
    <value><%= node[:bcpc][:hadoop][:journal][:paths] %></value>
  </property>

  <property>
    <name>dfs.webhdfs.enabled</name>
    <value>true</value>
  </property>

  <property>
    <name>dfs.ha.fencing.methods</name>
    <value>shell(/bin/true)</value>
  </property>
</configuration>
